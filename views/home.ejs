  <style>
    body {
      max-width: 1000px !important;
    }

    .container {
      transform: translateY(-100px);
      gap: 140px !important;
    }

    .hero {
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      z-index: -1;
      height: 260px;
      width: 100vw;
      background: linear-gradient(#ededed, #ffffff53);
    }

    .background-image {
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      z-index: -2;
      height: 260px;
      border-radius: 0;
      width: 100vw;
    }

    .slider {
      width: 100%;
      min-width: 70%;
      height: 150px;
      overflow: hidden;
    }

    .slide {
      width: 100%;
      height: 100%;
      display: none;
    }

    .footer {
      background-color: #f3f3f3;
      color: #333;
      text-align: center;
      padding: 20px 0;
      font-size: 0.9rem;
    }

    .footer-content {
      max-width: 1200px;
      padding: 0 20px;
    }

    .footer-content p {
      padding: 5px;
    }

    .footer-logo {
      width: 75px;
      height: auto;
      margin-bottom: 10px;
    }


    div.club-container {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 12px;
    }

    div.list-container {
      display: flex;
      flex-direction: column;
      gap: 8px;
      min-height: 300px;
    }

    div.list-container span {
      text-align: center;
      width: 100%;
    }


    a.club-list {
      display: flex;
      flex-direction: column;

    }

    div p.location {
      width: fit-content !important;
      padding: 8px 12px 8px 10px;
      background-color: var(--color-primary-50);
      color: var(--color-primary-400);
      font-weight: 700;
      font-size: 0.85rem;
      border-radius: 4px;
      display: flex;
      align-items: center;
      gap: 4px;
    }


    div p.location img {
      height: 16px;
    }

    div p.list-content.description.content {
      margin: 0;
      padding: 0;
    }

    a.club-list img {
      object-fit: cover;
      height: 160px;
      border-radius: 0;
      border-radius: 8px 8px 0 0;
    }


    div.club-box {
      display: grid;
      flex-direction: column;
      gap: 12px;
      padding: 20px;
      border: 1px solid var(--color-gray-200);
      border-radius: 0 0 8px 8px;
    }



    h3.list-title {
      font-size: 1.2rem;
      font-weight: 700;

    }

    h2.label {
      line-height: 1.5 !important;
    }


    div.club-container2 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 12px;
    }


    a.club-list2 {
      display: flex;
      flex-direction: row;
    }

    a.club-list2 img {
      border-radius: 0;
      border-radius: 8px 0 0 8px;
      height: 100px;
      aspect-ratio: 1/1;
      object-fit: cover;
    }

    a.club-list2 div.club-box {
      width: 100%;
      border-radius: 0 8px 8px 0;
    }

    a.club-list2 p.location {
      display: none;
    }


    div.club-box p.list-content.description {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 100%;
    }


    .photo-container {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap:12px;
    }

    .photo-box img {
      object-fit: cover;
      width: 100%;
      aspect-ratio: 1/1;
    }



    @media (max-width: 800px) {
      div.club-container {
        grid-template-columns: 1fr;
      }

      .photo-container {
        grid-template-columns: 1fr;
      }
    }


    div.section {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }



  </style>
</head>

<body>


