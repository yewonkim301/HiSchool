        <div id="eventsContainer" class="eventschedule">
          <% let today=new Date(); // 클라이언트에서 전달받은 선택된 날짜 %>
            <% let searchDate=`${today.getFullYear()}-${today.getMonth()+1}-${today.getDate()}`%>
              <% let todaySced=[]%>
